<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profissional.gui.HomeProfissional">

    <Button
        android:id="@+id/botaoAtualizarPerfilProfissional"
        android:layout_width="341dp"
        android:layout_height="52dp"
        android:background="#AF0D25"
        android:text="Atualizar Perfil"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="625dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/barra_superior2"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="#AF0D25"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/imagemProfissional"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:src="@drawable/ic_action_name"
        android:text="Trocar foto"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/nomeprofissional"
        android:layout_width="303dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/image"
        android:text="@string/nome_do_profissional"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="238dp" />

    <EditText
        android:id="@+id/decricaoprofissional"
        android:layout_width="399dp"
        android:layout_height="126dp"
        android:background="#80CACACA"
        android:hint="Descrição do profissional"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="303dp" />

    <TextView
        android:id="@+id/lblTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone:"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="448dp" />

    <TextView
        android:id="@+id/emailProfissionalHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@email.com"
        android:textColor="#DD000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="549dp" />

    <TextView
        android:id="@+id/lblCPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF:"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="519dp" />

    <TextView
        android:id="@+id/cpfProfissionalHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000.000.000-00"
        android:textColor="#DD000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="519dp" />

    <TextView
        android:id="@+id/enderecoProfissional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rua exemplo"
        android:textColor="#DD000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="482dp" />

    <TextView
        android:id="@+id/telefoneProfissionalHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(00) 90000-0000"
        android:textColor="#DD000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="448dp" />

    <TextView
        android:id="@+id/lblEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="549dp" />

    <TextView
        android:id="@+id/lblEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço:"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="482dp" />

    <Button
        android:id="@+id/buttonSairProfissional"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:background="#00FFFFFF"
        android:text="Sair"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="100dp"
        android:layout_height="117dp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="56dp" />

</androidx.constraintlayout.widget.ConstraintLayout>